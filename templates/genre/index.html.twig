{% extends 'baseA.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Genres</h1>
    <div class="row shadow p-3 mb-5 bg-white rounded">
    <div class=" col-12">

    <table class="table">
      <div class="row-md-1">
                      <a href="{{path('acceuil')}}"><buton class="btn btn-primary ">Retour sur le site</button></a>
                      <a href="{{path('article_index')}}"><buton class="btn btn-primary ">Article</button></a>
                      <a href="{{path('genre_index')}}"><buton class="btn btn-primary ">Genres</button></a>
                      <a href="{{path('categorie_index')}}"><buton class="btn btn-primary ">Categories</button></a>
                      <a href="{{path('images_index')}}"><buton class="btn btn-primary ">Galerie d'images</button></a>
            </div>          
        <thead>
            <tr>
                <th>Id</th>
                <th>Genre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.genre }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('genre_show', {'id': genre.id}) }}">regarder</a>
                    <a class="btn btn-warning" href="{{ path('genre_edit', {'id': genre.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success  btn-lg btn-block mt-5 mb-5" href="{{ path('genre_new') }}">Ajouter un genre</a>
    </div>
    </div>
{% endblock %}
