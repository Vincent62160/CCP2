{% extends 'baseA.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Article</h1>
      <a class="btn btn-primary" href="{{ path('article_index') }}">Retour</a>
    <div class="row shadow p-3 mb-5 bg-white rounded">
    <div class=" col-12">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.Titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ article.categorie.id }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ article.genre.id }}</td>
            </tr>
        <tr>
            <th>Image</th>
            <td>
                <img src="{{ vich_uploader_asset(article.image, 'imageFile') }}" alt="">
            </td>
        </tr>
        </tbody>
    </table>

    

    <a class="btn btn-success  btn-lg btn-block mt-5 mb-5"  href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>

    {{ include('article/_delete_form.html.twig') }}
    </div></div>
{% endblock %}
