{% extends 'baseA.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
<div class="container">
	<h2>Message index</h2>
    

    <table class="table table-hover" style="border: 0.5px solid black;">
    
        <thead class="thead-dark">
            <tr>
                <th scope="col"style="border: 0.5px solid black;">Id</th>
                <th scope="col"style="border: 0.5px solid black;">Email</th>
                <th scope="col"style="border: 0.5px solid black;">Sujet</th>
                <th scope="col"style="border: 0.5px solid black;">Commentaire</th>
                <th scope="col"style="border: 0.5px solid black;">Lire</th>
                <th scope="col"style="border: 0.5px solid black;">Modifier</th>
                <th scope="col"style="border: 0.5px solid black;">supprimer</th>

            </tr>
        </thead>
        <tbody>
        {% for message in messages %}




        
           
        <tr>
			
			<td style="border: 0.5px solid black;">{{ message.id }}</td>
			<td style="border: 0.5px solid black;">{{ message.Email }}</td>
			<td style="border: 0.5px solid black;">{{ message.Sujet }}</td>
            <td style="border: 0.5px solid black;">{{ message.Commentaire }}</td>
			<td style="border: 0.5px solid black;">
				<a href="{{ path('message_show', {'id': message.id}) }}"><button class="btn btn-primary" href="{{ path('message_show', {'id': message.id}) }}" type="submit"><i class="fa fa-bars" aria-hidden="true"></i> Lire</button></a>
            </td>
            <td>
				<a href="{{ path('message_edit', {'id': message.id}) }}"><button class="btn btn-warning" href="{{ path('message_edit', {'id': message.id}) }}" type="submit"><i class="fa fa-spinner" aria-hidden="true"></i> Modifier</button></a>
               
            </td>
            <td>
			    <a href="{{ path('message_delete', {'id': message.id}) }}"><button class="btn btn-warning"  type="submit"><i class="fa fa-spinner" aria-hidden="true"></i> Effacer</button></a>
			</td>
		</tr>
    
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
            
        {% endfor %}
        

    <a href="{{ path('message_new') }}">Create new</a>
    </tbody>
	</table>
</div>
{% endblock %}
